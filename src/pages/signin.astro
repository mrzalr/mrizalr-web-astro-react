---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" type="image/png" href="mrizalr-logo-simple.png" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signin | mrizalr</title>
  </head>
  <body class="flex justify-center items-center h-screen">
    <section
      class="w-[80%] min-w-[200px] max-w-[350px] flex flex-col gap-6 p-4 bg-white rounded-lg"
    >
      <div class="flex items-center justify-center">
        <img
          class="rounded-full w-20 h-20"
          src="/mrizalr-avatar.jpg"
          alt="mrizalr-avatar"
        />
      </div>
      <div>
        <h1 class="font-bold text-2xl">
          Hello <span class="text-primary">mrizalr</span> !
        </h1>
        <p class="text-lg">Insert your password to access dashboard page.</p>
      </div>
      <form class="flex flex-col items-end gap-2">
        <div class="border-2 rounded-lg px-4 py-2 w-full">
          <input
            class="outline-none w-full"
            type="password"
            placeholder="password"
          />
        </div>
        <button
          class="bg-secondary py-1 px-4 font-bold rounded-lg text-white flex"
          type="submit">login</button
        >
      </form>
      <a class="text-center" href="">forgot your password ?</a>
    </section>
  </body>
</html>
